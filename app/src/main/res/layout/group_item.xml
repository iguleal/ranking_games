<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_container_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="2dp"
    android:elevation="8dp"
    android:background="@color/light_grey"
    tools:showIn="@layout/activity_groups">

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NomeDoGrupo" />

    <ImageView
        android:id="@+id/ic_person"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/ic_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_players_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ic_person"
        app:layout_constraintStart_toEndOf="@+id/ic_person"
        app:layout_constraintTop_toTopOf="@id/ic_person" />

</androidx.constraintlayout.widget.ConstraintLayout>